<div class='pure-u-1 edit-section'>
  <form class='pure-form pure-form-aligned'>
    <fieldset>
      <legend>{{title}}</legend>

      {{#each content.changes as |change|}}
        {{preview-change change=change}}
      {{/each}}
    </fieldset>

    {{#if content.isInvalid}}
      <fieldset>
        <legend>Errors:</legend>
        {{#each content.errors as |error|}}
          {{preview-error error=error}}
        {{/each}}
      </fieldset>
    {{/if}}

    <div class='pure-control-group'>
      <button class='button-small button-primary pure-button' {{action 'save'}} disabled={{content.isInvalid}}>Save Changes to Model</button>
    </div>

    <div class='pure-control-group'>
      <button class='button-small button-primary pure-button' {{action 'rollback'}}>Undo Changes</button>
    </div>
  </form>
</div>
